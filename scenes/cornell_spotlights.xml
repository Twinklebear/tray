<xml>
	<scene>
		<!-- Objects -->
		<object name="box">
			<translate x="0" y="0" z="12"/>
			<object type="plane" name="WallBottom" material="wall">
				<scale value="32"/>
				<translate z="-12"/>
			</object>
			<object type="plane" name="WallTop" material="wall">
				<scale value="32"/>
				<rotate angle="180" x="1"/>
				<translate z="12"/>
			</object>
			<object type="plane" name="WallBack" material="wall">
				<scale value="32"/>
				<rotate angle="90" x="1"/>
				<translate y="20"/>
			</object>
			<object type="plane" name="WallLeft" material="wallRed">
				<scale value="32"/>
				<rotate angle="90" y="1"/>
				<translate x="-15"/>
			</object>
			<object type="plane" name="WallRight" material="wallGreen">
				<scale value="32"/>
				<rotate angle="-90" y="1"/>
				<translate x="15"/>
			</object>
		</object>
		<object type="obj" name="./models/cube.obj" material="plastic_white">
			<scale x="4" y="4" z="10"/>
			<rotate angle="20" z="1"/>
			<translate x="-6" y="6" z="5"/>
		</object>
		<object type="obj" name="./models/cube.obj" material="plastic_white">
			<scale x="4" y="4" z="4"/>
			<rotate angle="-15" z="1"/>
			<translate x="4" y="-3" z="2"/>
		</object>
		<object type="obj" name="./models/smooth_suzanne.obj" material="orange_glass">
			<scale value="2.5"/>
			<rotate angle="54" x="1"/>
			<rotate angle="35" z="1"/>
			<translate x="4" y="-3" z="7.3"/>
		</object>
		<object type="disk" name="disk" material="wall" radius="3">
			<rotate angle="180" y="1"/>
			<translate z="23.8"/>
			<light type="area" name="areaLight">
				<intensity r="1" g="0.772549" b="0.560784" value="30"/>
			</light>
		</object>
		<object name="suzannes_spotlight">
			<!-- Light comes out of -Z if not rotated -->
			<rotate angle="40" y="1"/>
			<rotate angle="50" z="1"/>
			<translate y="2" x="9" z="16"/>
			<object type="cone" name="cone" material="gold" radius="2" height="4">
			</object>
			<object type="disk_spot" name="cone_disk_light" material="wall" radius="1.25">
				<rotate angle="180" x="1"/>
				<translate z="1.2"/>
				<light type="area" name="spot_area_light">
					<intensity r="0.780131" g="0.780409" b="0.775833" value="150"/>
				</light>
			</object>
		</object>
		<object name="spotlight2">
			<!-- Light comes out of -Z if not rotated -->
			<rotate angle="135" y="1"/>
			<rotate angle="15" z="1"/>
			<translate x="-6" y="-3" z="10"/>
			<object type="cone" name="cone" material="gold" radius="2" height="4">
			</object>
			<object type="disk_spot" name="cone_disk_light" material="wall" radius="1.25">
				<rotate angle="180" x="1"/>
				<translate z="1.2"/>
				<light type="area" name="spot_area_light2">
					<intensity r="0.780131" g="0.780409" b="0.775833" value="150"/>
				</light>
			</object>
			<object type="sphere" name="lens" material="glass_mat">
				<scale x="2" z="0.25"/>
			</object>
		</object>
		<!-- Light comes out of +Z if not rotated -->
		<object name="cylinder_spotlight">
			<rotate angle="120" x="1"/>
			<rotate angle="40" z="1"/>
			<translate x="-12" y="12" z="22"/>
			<object type="cylinder" name="cylinder" material="gold" height="3">
			</object>
			<object type="disk_cyl" name="cylinder_disk_light" material="wall" radius="1">
				<translate z="0.75"/>
				<light type="area" name="cylinder_area_light">
					<intensity r="0.780131" g="0.780409" b="0.775833" value="150"/>
				</light>
			</object>
		</object>


		<!-- Materials -->
		<material type="matte" name="wall">
			<diffuse  r="0.740063" g="0.742313" b="0.733934"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="wallRed">
			<diffuse  r="0.366046" g="0.0371827" b="0.0416385"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="wallGreen">
			<diffuse  r="0.162928" g="0.408903" b="0.0833759"/>
			<roughness value="1"/>
		</material>
		<material type="plastic" name="plastic_white">
			<diffuse  r="0.8" g="0.8" b="0.8"/>
			<specular r="1.0" g="1.0" b="1.0" value="0.6"/>
			<roughness value="0.5"/>
		</material>
		<material type="metal" name="gold">
			<ior spd="./spds/Au.eta.spd"/>
			<absorption spd="./spds/Au.k.spd"/>
			<roughness value="0.005"/>
		</material>
		<material type="glass" name="glass_mat">
			<reflection value="1"/>
			<transmission value="1"/>
			<ior value="1.52"/>
		</material>
		<material type="glass" name="orange_glass">
			<reflection r="0.9607843" g="0.501960" b="0"/>
			<transmission r="0.9607843" g="0.501960" b="0"/>
			<ior value="1.52"/>
		</material>
	</scene>

	<camera>
		<position x="0" y="-60" z="12"/>
		<target x="0" y="0" z="12"/>
		<up x="0" y="0" z="1"/>
		<fov value="30"/>
		<width value="800"/>
		<height value="600"/>
	</camera>

	<config>
		<sampler type="adaptive" min="16" max="32"/>
		<renderer type="photon" max_depth="6" max_photon_depth="16"
			num_caustic="1000000" num_indirect="2000000"
			final_gather_samples="40" query_size="100"
			max_dist_sqr="0.1" max_radiance_dist="1"/>
	</config>
</xml>

