<xml>
  <scene>
    <background r="0" g="0" b="0">
      <scale y="0.4"/>
      <translate y="-0.1"/>
    </background>
	<environment value="0.3" texture="../textures/clouds.ppm"/>
 
    <!-- Objects -->
    <object type="plane" name="ground" material="ground">
      <scale value="500"/>
    </object>
	<object type="obj" name="../models/teapot_hres.obj" material="bricks">
      <scale value="0.7"/>
      <rotate angle="-50" z="1"/>
      <translate x="0" y="0" z="0"/>
    </object>
    <object type="sphere" name="sphere1" material="checkerMtl">
      <scale value="5"/>
      <translate x="35" y="70" z="5"/>
    </object>
    <object type="sphere" name="sphere2" material="checkerMtl">
      <scale value="5"/>
      <translate x="30" y="60" z="5"/>
    </object>
    <object type="sphere" name="sphere2" material="checkerMtl">
      <scale value="5"/>
      <translate x="25" y="50" z="5"/>
    </object>
    <object type="sphere" name="sphere3" material="checkerMtl">
      <scale value="5"/>
      <translate x="20" y="40" z="5"/>
    </object>
    <object type="sphere" name="sphere4" material="checkerMtl">
      <scale value="5"/>
      <translate x="15" y="30" z="5"/>
    </object>
    <object type="sphere" name="sphere5" material="checkerMtl">
      <scale value="5"/>
      <translate x="10" y="20" z="5"/>
    </object>
    <object type="sphere" name="sphere6" material="checkerMtl">
      <scale value="5"/>
      <translate x="5" y="10" z="5"/>
    </object>
    <object type="sphere" name="sphere7" material="checkerMtl">
      <scale value="5"/>
      <translate x="-5" y="-10" z="5"/>
    </object>
    <object type="sphere" name="sphere8" material="checkerMtl">
      <scale value="5"/>
      <translate x="-10" y="-20" z="5"/>
    </object>
    <object type="sphere" name="sphere9" material="checkerMtl">
      <scale value="5"/>
      <translate x="-15" y="-30" z="5"/>
    </object>
 
    <!-- Materials -->
    <material type="blinn" name="ground">
      <diffuse r="0.3" g="0.3" b="0.3"/>
      <specular value="0.1"/>
      <glossiness value="50"/>
    </material>
    <material type="blinn" name="checkerMtl">
      <diffuse texture="checkerboard">
        <color1 r="0.3" g="0" b="0" />
        <color2 r="0.7" g="0" b="0" />
        <scale x="0.25" y="0.4"/>
      </diffuse>
      <specular value="0.8"/>
      <glossiness value="100"/>
      <reflection value="0.5"/>
    </material>
    <material type="blinn" name="bricks">
		<diffuse texture="../textures/bricks.ppm">
      </diffuse>
      <specular value="0.3"/>
      <glossiness value="10"/>
    </material>
 
    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.2"/>
    </light>
    <light type="direct" name="directLight">
      <intensity value="0.6"/>
      <direction x="-1" y="0.2" z="-1"/>
    </light>
    <light type="direct" name="directLight2">
      <intensity value="0.4"/>
      <direction x="1" y="0.3" z="-1"/>
    </light>
  </scene>
 
  <camera>
    <position x="0" y="-70" z="25"/>
    <target x="-2" y="0" z="3"/>
    <up x="0" y="0" z="1"/>
    <fov value="25"/>
    <width value="800"/>
    <height value="600"/>
    <focaldist value="70"/>
    <dof value="1.5"/>
  </camera>

  <config>
	  <sampler type="adaptive" min="32" max="128"/>
  </config>
</xml>

