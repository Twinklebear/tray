<xml>
	<scene>
		<!-- Objects -->
		<object name="box">
			<translate x="0" y="0" z="12"/>
			<object type="plane" name="WallBottom" material="wall">
				<scale value="100"/>
				<translate z="-12"/>
			</object>
			<object type="plane" name="WallTop" material="wall">
				<scale value="32"/>
				<rotate angle="180" x="1"/>
				<translate z="50"/>
			</object>
			<object type="plane" name="WallBack" material="checker">
				<scale value="100"/>
				<rotate angle="90" x="1"/>
				<translate y="50"/>
			</object>
			<object type="plane" name="WallLeft" material="wall">
				<scale value="32"/>
				<rotate angle="90" y="1"/>
				<translate x="-50"/>
			</object>
			<object type="plane" name="WallRight" material="wall">
				<scale value="32"/>
				<rotate angle="-90" y="1"/>
				<translate x="50"/>
			</object>
		</object>
		<object type="obj" name="./models/teapot_hres.obj" material="copper">
			<scale value="0.6"/>
			<rotate angle="-50" z="1"/>
			<translate x="-3.5"/>
		</object>
		<object type="obj" name="/models/armadillo.obj" material="two_layer_silver">
			<scale value="0.18"/>
			<rotate angle="90" x="1"/>
			<rotate angle="-120" z="1"/>
			<translate x="-14" y="4" z="9.7"/>
		</object>
		<object type="obj" name="./models/phlegmatic_dragon.obj" material="purple_plastic">
			<scale value="0.15"/>
			<rotate angle="-30" z="1"/>
			<translate x="18.5" y="6"/>
		</object>
		<object type="obj" name="./models/bunny.obj" material="translucent_bunny">
			<scale value="3"/>
			<rotate angle="90" x="1"/>
			<rotate angle="-40" z="1"/>
			<translate x="15.5" y="-9" z="1"/>
		</object>
		<object type="sphere_r1.8" name="sphere_light" radius="2" material="wall">
			<translate y="0" z="30"/>
			<light type="area" name="areaLight">
				<intensity r="0.780131" g="0.780409" b="0.775833" value="175"/>
			</light>
		</object>

		<!-- Materials -->
		<material type="matte" name="wall">
			<diffuse  r="0.740063" g="0.742313" b="0.733934"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="checker">
			<diffuse texture="checkerboard">
				<color1 r="0" g="1" b="1" value="0.5"/>
				<color2 r="0.5" g="0.5" b="1"/>
				<scale value="0.08"/>
			</diffuse>
			<roughness value="1"/>
		</material>
		<material type="merl" name="two_layer_silver" file="./brdfs/two-layer-silver.binary"/>
		<material type="plastic" name="purple_plastic">
			<diffuse  r="0.2" g="0.2" b="0.8" value="0.9"/>
			<specular r="0.6" g="0.6" b="1.0" value="0.7"/>
			<roughness value="0.005"/>
		</material>
		<material type="translucent" name="translucent_bunny">
			<diffuse  r="0.8" g="0.2" b="0.2"/>
			<specular r="1.0" g="1.0" b="1.0" value="0.9"/>
			<reflection r="1.0" g="0.4" b="1.0" value="0.9"/>
			<transmission r="1.0" g="1.0" b="0.2"/>
			<roughness value="0.5"/>
			<ior value="1.6"/>
		</material>
		<material type="metal" name="copper">
			<ior spd="./spds/Cu.eta.spd"/>
			<absorption spd="./spds/Cu.k.spd"/>
			<roughness value="0.0005"/>
		</material>
	</scene>

	<camera>
		<position x="0" y="-60" z="20"/>
		<target x="0" y="0" z="10"/>
		<up x="0" y="0" z="1"/>
		<fov value="40"/>
		<width value="800"/>
		<height value="600"/>
	</camera>

	<config>
		<sampler type="adaptive" min="64" max="64"/>
		<renderer type="path" min_depth="3" max_depth="8"/>
	</config>
</xml>

