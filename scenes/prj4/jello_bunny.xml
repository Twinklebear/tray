<xml>
  <scene>
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallBottom" material="wall">
        <scale value="32"/>
        <translate z="-12"/>
      </object>
      <object type="plane" name="WallTop" material="wall">
        <scale value="32"/>
        <rotate angle="180" x="1"/>
        <translate z="12"/>
      </object>
      <object type="plane" name="WallBack" material="wall">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate y="20"/>
      </object>
      <object type="plane" name="WallLeft" material="wallRed">
        <scale value="32"/>
        <rotate angle="90" y="1"/>
        <translate x="-15"/>
      </object>
      <object type="plane" name="WallRight" material="wallBlue">
        <scale value="32"/>
        <rotate angle="-90" y="1"/>
        <translate x="15"/>
      </object>
    </object>
	<object type="obj" name="../models/bunny.obj" material="jello_mat">
	  <scale value="6"/>
	  <rotate angle="90" x="1"/>
	  <translate x="3" y="0" z="2"/>
	</object>
 
    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse  r="1" g="1" b="1"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallRed">
      <diffuse  r="1.0" g="0.5" b="0.5"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallBlue">
      <diffuse  r="0.5" g="0.5" b="1.0"/>
      <specular value="0"/>
    </material>
	<material type="blinn" name="jello_mat">
	  <diffuse r="1.0" g="0.2" b="0.2" value="0.85"/>
      <specular r="1.0" g="1.0" b="1.0" value="1.0"/>
      <glossiness value="80"/>
      <refraction value="0.8" index="1.21"/>
      <absorption r="0.0001" g="0.5" b="0.2"/>
    </material>
 
    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.1"/>
    </light>
    <light type="point" name="pointLight">
      <intensity value="0.5"/>
      <position x="0" y="0" z="22"/>
    </light>
  </scene>
 
  <camera>
    <position x="0" y="-60" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>

