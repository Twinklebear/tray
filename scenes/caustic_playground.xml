<xml>
	<scene>
		<!-- Objects -->
		<object name="box">
			<translate x="0" y="0" z="12"/>
			<object type="plane" name="WallBottom" material="wall">
				<scale value="100"/>
				<translate z="-12"/>
			</object>
			<object type="plane" name="WallTop" material="wall">
				<scale value="32"/>
				<rotate angle="180" x="1"/>
				<translate z="50"/>
			</object>
			<object type="plane" name="WallBack" material="wall">
				<scale value="100"/>
				<rotate angle="90" x="1"/>
				<translate y="50"/>
			</object>

			<object type="plane" name="WallLeft" material="wall">
				<scale value="32"/>
				<rotate angle="90" y="1"/>
				<translate x="-50"/>
			</object>
			<object type="plane" name="WallRight" material="wall">
				<scale value="32"/>
				<rotate angle="-90" y="1"/>
				<translate x="50"/>
			</object>
		</object>
		<object type="obj" name="./models/suzanne.obj" material="glass_mat">
			<scale value="8"/>
			<rotate angle="60" x="1"/>
			<rotate angle="25" z="1"/>
			<translate y="-1" z="4"/>
		</object>
		<object type="sphere_r1.8" name="sphere_light" radius="2.5" material="wall">
			<translate x="0" y="10" z="18"/>
			<light type="area" name="areaLight">
				<intensity r="0.780131" g="0.780409" b="0.775833" value="175"/>
			</light>
		</object>

		<!-- Materials -->
		<material type="matte" name="wall">
			<diffuse  r="0.740063" g="0.742313" b="0.733934"/>
		</material>
		<material type="glass" name="glass_mat">
			<reflection r="1" g="0.7" b="0"/>
			<transmission r="1" g="0.7" b="0"/>
			<ior value="1.52"/>
		</material>
	</scene>

	<camera>
		<position x="0" y="-60" z="25"/>
		<target x="0" y="0" z="4"/>
		<up x="0" y="0" z="1"/>
		<fov value="30"/>
		<width value="800"/>
		<height value="600"/>
	</camera>

	<config>
		<sampler type="adaptive" min="64" max="1024"/>
		<renderer type="path" min_depth="3" max_depth="8"/>
	</config>
</xml>

