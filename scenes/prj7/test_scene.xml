<xml>
  <scene>
    <background r="1" g="1" b="1" texture="clouds.ppm">
      <scale y="0.4"/>
      <translate y="-0.1"/>
    </background>
    <environment value="0.3" texture="clouds.ppm"/>
     
    <!-- Objects -->
    <object type="plane" name="groundPlane" material="ground">
      <scale value="1000"/>
    </object>
	<!--
	<object type="obj" name="../models/teapot_hres.obj" material="bricks">
      <scale value="0.8"/>
      <rotate angle="-50" z="1"/>
      <translate x="2" y="-5" z="0"/>
    </object>
-->
    <object type="plane" name="sphere1" material="pure_reflective">
      <scale value="10"/>
	  <rotate angle="91" x="1"/>
      <translate x="0" y="1" z="8"/>
    </object>
	<!--
    <object type="sphere" name="sphere2" material="refractive">
      <scale value="5"/>
      <translate x="-8" y="-16" z="5"/>
    </object>
-->
	<object type="sphere" name="dbg_sph" material="dbg_test">
		<scale value="3"/>
		<translate x="0" y="-35" z="3"/>
	</object>
 
    <!-- Materials -->
	<material type="blinn" name="dbg_test">
		<diffuse r="1" g="0" b="0"/>
		<specular value="0.4"/>
		<glossiness value="10"/>
	</material>
	<material type="blinn" name="pure_reflective">
	  <diffuse value="0"/>
      <specular value="0"/>
      <glossiness value="0"/>
      <reflection value="1"/>
    </material>


    <material type="blinn" name="ground">
      <diffuse r="1" g="1" b="1" texture="checkerboard">
        <color1 r="0.2" g="0.2" b="0.2"/>
        <color2 r="0.6" g="0.6" b="0.6"/>
        <scale value="0.01"/>
      </diffuse>
      <specular value="0"/>
	  <!--<reflection value="0.5"/>-->
    </material>
    <material type="blinn" name="checkerMtl">
      <diffuse texture="checkerboard">
        <color1 r="0.1" g="0.1" b="0.1" />
        <color2 r="0.1" g="0.1" b="0.1" />
        <scale x="0.25" y="0.4"/>
      </diffuse>
      <specular value="0.8"/>
      <glossiness value="100"/>
      <reflection value="1"/>
    </material>
    <material type="blinn" name="bricks">
      <diffuse texture="../textures/bricks.ppm">
      </diffuse>
      <specular value="0.3"/>
      <glossiness value="10"/>
    </material>
    <material type="blinn" name="refractive">
      <diffuse value="0"/>
      <specular value="0.8"/>
      <glossiness value="100"/>
      <refraction index="1.52" value="1"/>
    </material>
 
    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.2"/>
    </light>
    <light type="direct" name="directLight">
      <intensity value="0.6"/>
      <direction x="-1" y="0.2" z="-1"/>
    </light>
    <light type="direct" name="directLight2">
      <intensity value="0.4"/>
      <direction x="1" y="0.3" z="-1"/>
    </light>
  </scene>
 
  <camera>
    <position x="0" y="-50" z="15"/>
    <target x="0" y="0" z="3"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>

