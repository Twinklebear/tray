<xml>
  <scene>
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="plane" name="WallBottom" material="wall">
        <scale value="32"/>
        <translate z="-12"/>
      </object>
      <object type="plane" name="WallTop" material="wall">
        <scale value="32"/>
        <rotate angle="180" x="1"/>
        <translate z="12"/>
      </object>
      <object type="plane" name="WallBack" material="wall">
        <scale value="32"/>
        <rotate angle="90" x="1"/>
        <translate y="20"/>
      </object>
      <object type="plane" name="WallLeft" material="wallRed">
        <scale value="32"/>
        <rotate angle="90" y="1"/>
        <translate x="-15"/>
      </object>
      <object type="plane" name="WallRight" material="wallBlue">
        <scale value="32"/>
        <rotate angle="-90" y="1"/>
        <translate x="15"/>
      </object>
    </object>
	<object type="obj" name="../models/killeroo.obj" material="mtl1">
      <scale value="18"/>
      <rotate angle="90" x="1"/>
	  <rotate angle="-145" z="1"/>
      <translate x="1" y="5" z="8"/>
    </object>
	<object type="obj" name="../models/teapot_hres.obj" material="mtl1">
      <scale value="0.3"/>
      <rotate angle="-60" z="1"/>
      <translate x="5" y="-6" z="0"/>
    </object>
    <object type="sphere" name="sphere2" material="mtl2">
      <scale value="4"/>
      <rotate angle="30" y="1"/>
      <translate x="-8" y="-6" z="20"/>
    </object>
 
    <!-- Materials -->
    <material type="flat" name="wall">
      <diffuse  r="1" g="1" b="1"/>
      <specular value="0"/>
    </material>
    <material type="flat" name="wallRed">
      <diffuse  r="1.0" g="0.5" b="0.5"/>
      <specular value="0"/>
    </material>
    <material type="flat" name="wallBlue">
      <diffuse  r="0.5" g="0.5" b="1.0"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="mtl1">
      <diffuse  r="0.8" g="0.2" b="0.2"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.9"/>
      <glossiness value="0.05"/>
      <reflection value="0.7"/>
    </material>
    <material type="blinn" name="mtl2">
      <diffuse  r="0.1" g="0.1" b="0.9"/>
      <specular r="0.9" g="0.9" b="1.0" value="0.8"/>
      <glossiness value="0.1"/>
      <refraction value="0.8" index="1.52"/>
      <absorption r="0.01" g="0.001" b="0.0001"/>
    </material>
 
    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.1"/>
    </light>
    <light type="area" name="areaLight">
      <intensity value="100"/>
      <position x="0" y="-20" z="12"/>
	  <size value="1"/>
    </light>
  </scene>
 
  <camera>
    <position x="0" y="-60" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="800"/>
    <height value="600"/>
  </camera>

  <config>
	  <sampler type="adaptive" min="16" max="32"/>
  </config>
</xml>

