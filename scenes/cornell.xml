<xml>
	<scene>
		<!-- Objects -->
		<object name="box">
			<translate x="0" y="0" z="12"/>
			<object type="plane" name="WallBottom" material="wall">
				<scale value="32"/>
				<translate z="-12"/>
			</object>
			<object type="plane" name="WallTop" material="wall">
				<scale value="32"/>
				<rotate angle="180" x="1"/>
				<translate z="12"/>
			</object>
			<object type="plane" name="WallBack" material="wall">
				<scale value="32"/>
				<rotate angle="90" x="1"/>
				<translate y="20"/>
			</object>
			<object type="plane" name="WallLeft" material="wallRed">
				<scale value="32"/>
				<rotate angle="90" y="1"/>
				<translate x="-15"/>
			</object>
			<object type="plane" name="WallRight" material="wallGreen">
				<scale value="32"/>
				<rotate angle="-90" y="1"/>
				<translate x="15"/>
			</object>
		</object>
		<object type="obj" name="./models/cube.obj" material="plastic_white">
			<scale x="4" y="4" z="10"/>
			<rotate angle="20" z="1"/>
			<translate x="-6" y="6" z="5"/>
		</object>
		<object type="obj" name="./models/cube.obj" material="plastic_white">
			<scale x="4" y="4" z="5"/>
			<rotate angle="-15" z="1"/>
			<translate x="4" y="-3" z="2.5"/>
		</object>
		<object type="disk" name="disk" material="wall" radius="3">
			<rotate angle="180" y="1"/>
			<translate z="23.8"/>
			<light type="area" name="areaLight">
				<intensity r="0.780131" g="0.780409" b="0.775833" value="25"/>
			</light>
		</object>
		<object name="spotlight">
			<rotate angle="-90" y="1"/>
			<translate x="6" z="10"/>
			<object type="cone" name="cone" material="gold" radius="2" height="4">
			</object>
			<object type="disk_spot" name="cone_disk_light" material="wall" radius="1.25">
				<rotate angle="180" x="1"/>
				<translate z="1.2"/>
				<light type="area" name="spot_area_light">
					<intensity r="0.780131" g="0.780409" b="0.775833" value="40"/>
				</light>
			</object>
		</object>
		<object name="spotlight2">
			<rotate angle="90" y="1"/>
			<rotate angle="45" y="1"/>
			<rotate angle="15" z="1"/>
			<translate x="-6" y="-3" z="10"/>
			<object type="cone" name="cone" material="gold" radius="2" height="4">
			</object>
			<object type="disk_spot" name="cone_disk_light" material="wall" radius="1.25">
				<rotate angle="180" x="1"/>
				<translate z="1.2"/>
				<light type="area" name="spot_area_light2">
					<intensity r="0.780131" g="0.780409" b="0.775833" value="100"/>
				</light>
			</object>
		</object>


		<!-- Materials -->
		<material type="matte" name="wall">
			<diffuse  r="0.740063" g="0.742313" b="0.733934"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="wallRed">
			<diffuse  r="0.366046" g="0.0371827" b="0.0416385"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="wallGreen">
			<diffuse  r="0.162928" g="0.408903" b="0.0833759"/>
			<roughness value="1"/>
		</material>
		<material type="plastic" name="plastic_white">
			<diffuse  r="0.8" g="0.8" b="0.8"/>
			<specular r="1.0" g="1.0" b="1.0" value="0.6"/>
			<roughness value="0.5"/>
		</material>
		<material type="metal" name="gold">
			<ior spd="./spds/Au.eta.spd"/>
			<absorption spd="./spds/Au.k.spd"/>
			<roughness value="0.005"/>
		</material>
	</scene>

	<camera>
		<position x="0" y="-60" z="12"/>
		<target x="0" y="0" z="12"/>
		<up x="0" y="0" z="1"/>
		<fov value="30"/>
		<width value="800"/>
		<height value="600"/>
	</camera>

	<config>
		<sampler type="adaptive" min="32" max="32"/>
		<renderer type="bidir" min_depth="3" max_depth="8"/>
	</config>
</xml>

