<xml>
	<scene>
		<!-- Objects -->
		<object name="box">
			<translate x="0" y="0" z="12"/>
			<object type="plane" name="WallBottom" material="wall">
				<scale value="32"/>
				<translate z="-12"/>
			</object>
			<object type="plane" name="WallTop" material="wall">
				<scale value="32"/>
				<rotate angle="180" x="1"/>
				<translate z="12"/>
			</object>
			<object type="plane" name="WallBack" material="checker">
				<scale value="32"/>
				<rotate angle="90" x="1"/>
				<translate y="20"/>
			</object>
			<object type="plane" name="WallLeft" material="wallRed">
				<scale value="32"/>
				<rotate angle="90" y="1"/>
				<translate x="-15"/>
			</object>
			<object type="plane" name="WallRight" material="wallBlue">
				<scale value="32"/>
				<rotate angle="-90" y="1"/>
				<translate x="15"/>
			</object>
		</object>

		<object type="sphere" name="glass_sphere" material="glass_mat">
			<scale value="4"/>
			<translate z="4"/>
		</object>
		<object type="sphere_r1" name="sphere_light" radius="1" material="wall">
			<translate x="0" y="0" z="22"/>
			<light type="area" name="areaLight">
				<intensity r="0.780131" g="0.780409" b="0.775833" value="50"/>
			</light>
		</object>

		<!-- Materials -->
		<material type="matte" name="wall">
			<diffuse  r="1" g="1" b="1"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="wallRed">
			<diffuse  r="1.0" g="0.2" b="0.2"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="wallBlue">
			<diffuse  r="0.2" g="0.2" b="1.0"/>
			<roughness value="1"/>
		</material>
		<material type="matte" name="checker">
			<diffuse texture="checkerboard">
				<color1 r="0" g="1" b="1" value="0.5"/>
				<color2 r="0.5" g="0.5" b="1"/>
				<scale value="0.08"/>
			</diffuse>
			<roughness value="1"/>
		</material>
		<material type="glass" name="glass_mat">
			<reflection value="1"/>
			<transmission value="1"/>
			<ior value="1.52"/>
		</material>
	</scene>

	<camera>
		<position x="0" y="-60" z="12"/>
		<target x="0" y="0" z="12"/>
		<up x="0" y="0" z="1"/>
		<fov value="30"/>
		<width value="800"/>
		<height value="600"/>
	</camera>

	<config>
		<sampler type="adaptive" min="16" max="32"/>
		<renderer type="photon" max_depth="4" max_photon_depth="10"
			num_caustic="500000" num_indirect="1000000"
			final_gather_samples="32" query_size="50"
			max_dist_sqr="0.01"/>
	</config>
</xml>

